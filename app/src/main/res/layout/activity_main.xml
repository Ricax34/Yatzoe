                android:onClick="onBoxClicked"
                android:tag="imageView12Full"
                app:srcCompat="@drawable/ic_full50" />

            <ImageView
                android:id="@+id/imageView13Yam"
                android:layout_width="60dp"
                android:layout_height="60dp"
