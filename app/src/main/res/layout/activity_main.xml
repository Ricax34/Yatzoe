            <ImageView
                android:id="@+id/imageView14Appel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="auto"
                android:tag="imageView14Appel"
                android:onClick="onBoxClicked"
                app:srcCompat="@drawable/ic_appel50" />

            <ImageView
                android:id="@+id/imageView15Suite"
