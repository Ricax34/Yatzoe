                android:tag="imageView18Suite"
                app:srcCompat="@drawable/ic_suite50" />

            <ImageView
                android:id="@+id/imageView19Small"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:onClick="onBoxClicked"
                android:tag="imageView19Small"
                app:srcCompat="@drawable/ic_small50" />

            <ImageView
                android:id="@+id/imageView20Un"
