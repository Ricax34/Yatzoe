        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView16Six"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="auto"
                android:onClick="onBoxClicked"
                android:tag="imageView16Six"
                app:srcCompat="@drawable/ic_six50" />

            <ImageView
                android:id="@+id/imageView17Sec"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:onClick="onBoxClicked"
                android:tag="imageView17Sec"
                app:srcCompat="@drawable/ic_sec50" />

            <ImageView
                android:id="@+id/imageView18Suite"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
